<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/titulo_pantalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SelecciÃ³n de Clase"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/text_spinner_clase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccion su clase:" />

        <Spinner
            android:id="@+id/clases_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icono_info_clase"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icono_info" />

            <TextView
                android:id="@+id/text_info_clase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:id="@+id/comp_armas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Competencias con Armas:" />

        <TextView
            android:id="@+id/text_comp_armas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:id="@+id/comp_armaduras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Competencias con Armaduras:" />

        <TextView
            android:id="@+id/text_comp_armaduras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:id="@+id/cabecera_hab_esp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_hab_esp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:id="@+id/text_comp_hab_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Competencias con Habilidades" />

        <Spinner
            android:id="@+id/spinner_comp_hab_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_comp_hab_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:id="@+id/titulo_selec_equipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipo inicial:" />

        <TextView
            android:id="@+id/res_spinner_equipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>